{% extends "layout.njk" %}
{% import "macros.njk" as macros %}

{% block main %}
{{ macros.imports(imports) }}

{% if accounts.length > 0 %}
// Accounts.
export type {{ name }}InstructionAccounts = {
{% for account in accounts %}
{% if account.description.length > 0 %}
  {{ macros.docblock([account.description]) }}
{% endif %}
  {{ account.name }}{{ account.optionalSign }}: {{ account.type }};
{% endfor %}
};
{% endif %}

// Arguments.
{{ macros.exportType(name + 'InstructionArgs', argsTypeDefinition) }}

// Arguments Serializer.
{{ macros.exportSerializer(name + 'InstructionArgs', argsSerializer) }}
{% endblock %}
